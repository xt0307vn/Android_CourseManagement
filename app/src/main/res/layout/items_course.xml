<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/item_Course">

    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="18dp"
        android:elevation="15dp">

        <RelativeLayout
            android:id="@+id/item_background1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55C3B8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_courseID"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="id: 64564564665"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="49dp"
                    app:cardElevation="2dp"
                    android:alpha="5">
                    <Button
                        android:id="@+id/item_Detail"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:background="#33cccc"
                        android:padding="0dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="49dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <Button
                        android:id="@+id/item_Edit"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:background="#ffcc66"
                        android:padding="0dp"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="49dp">
                    <Button
                        android:id="@+id/item_Delete"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:background="#ff5050"
                        android:padding="0dp"/>

                </androidx.cardview.widget.CardView>





            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>