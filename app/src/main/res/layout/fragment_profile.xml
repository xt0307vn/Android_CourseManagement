<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#56C3B8">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/ic_background_profile1">
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/navigation_Bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#56C3B8"
            android:gravity="center_vertical">



            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="Profile"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#fff"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/navigation_Bar">

            <RelativeLayout
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82dp"
                android:rotation="45"
                android:background="#fff">

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:rotation="45">


                    <ImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:rotation="-45"
                        android:src="@drawable/unnamed" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/card_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_User_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_userName"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"/>

                <TextView
                    android:id="@+id/profile_User_id"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_boxFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Fullname:"
                        android:textColor="#3D6FB7"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_User_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textSize="25sp"
                        android:textColor="#56C3B8"
                        android:textColorHint="#94b8b8"
                        android:enabled="false"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#56C3B8"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_boxPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Phone:"
                        android:textColor="#3D6FB7"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_User_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textColor="#56C3B8"
                        android:textSize="25sp"
                        android:textColorHint="#94b8b8"
                        android:enabled="false"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#56C3B8"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_boxEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Email:"
                        android:textColor="#3D6FB7"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_User_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="monospace"
                        android:textColor="#56C3B8"
                        android:enabled="false"
                        android:textSize="25sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#56C3B8"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/progile_signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_btnsignin"
            android:drawableRight="@drawable/ic_logout"
            android:fontFamily="monospace"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Sign out"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>




</FrameLayout>